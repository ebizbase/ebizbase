{
  "name": "accounts-site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/accounts-site/src",
  "tags": ["sites"],
  "metadata": {
    "version": "0.0.0",
    "namespace": "ebizbase/accounts-site"
  },
  "targets": {
    "compile": {
      "executor": "@angular-devkit/build-angular:browser",
      "options": {
        "outputPath": "dist/apps/accounts-site",
        "index": "apps/accounts-site/src/index.html",
        "main": "apps/accounts-site/src/main.ts",
        "tsConfig": "apps/accounts-site/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "polyfills": ["zone.js"],
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/accounts-site/public"
          },
          {
            "glob": "**/*",
            "input": "node_modules/@taiga-ui/icons/src",
            "output": "icons/tui"
          },
          {
            "glob": "**/*",
            "input": "node_modules/@taiga-ui/icons-material/src",
            "output": "icons/mat"
          },
          {
            "glob": "**/*",
            "input": "node_modules/@taiga-ui/icons-fontawesome/src",
            "output": "icons/fa"
          }
        ],
        "styles": [
          "apps/accounts-site/src/styles.scss",
          "@taiga-ui/core/styles/taiga-ui-theme.less",
          "@taiga-ui/addon-mobile/styles/taiga-ui-mobile.less"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "900kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "optimization": {
            "scripts": true,
            "styles": {
              "minify": true,
              "inlineCritical": false
            },
            "fonts": false
          },
          "extractLicenses": true
        },
        "development": {
          "optimization": false,
          "sourceMap": true,
          "extractLicenses": false,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "buildTarget": "accounts-site:compile:development",
        "disableHostCheck": true,
        "host": "0.0.0.0",
        "port": 4201,
        "hmr": true
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "accounts-site:browser"
      }
    },
    "build": {
      "dependsOn": ["compile"],
      "executor": "@ebizbase/nx-docker:build",
      "defaultConfiguration": "development",
      "configurations": {
        "development": {
          "load": true,
          "tags": ["edge"]
        },
        "production": {
          "push": true,
          "tags": ["{major}.{minor}.{patch}"]
        }
      }
    },
    "analyze": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx nx compile accounts-site --stats-json",
          "npx webpack-bundle-analyzer ./dist/apps/accounts-site/stats.json"
        ],
        "parallel": false
      }
    }
  }
}
