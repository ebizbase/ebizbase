{
  "name": "iam-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/iam-service/src",
  "projectType": "application",
  "tags": ["services"],
  "targets": {
    "compile": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "sourceMap": true,
        "extractLicenses": false,
        "outputPath": "dist/apps/iam-service",
        "main": "apps/iam-service/src/main.ts",
        "tsConfig": "apps/iam-service/tsconfig.app.json",
        "webpackConfig": "apps/iam-service/webpack.config.js",
        "assets": []
      },
      "configurations": {
        "development": {
          "optimization": false,
          "generatePackageJson": false
        },
        "production": {
          "optimization": true,
          "generatePackageJson": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["compile"],
      "options": {
        "buildTarget": "iam-service:compile",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "iam-service:compile:development"
        },
        "production": {
          "buildTarget": "iam-service:compile:production"
        }
      }
    },
    "build": {
      "dependsOn": ["compile"],
      "executor": "@nx-tools/nx-container:build",
      "defaultConfiguration": "local",
      "configurations": {
        "local": {
          "load": true,
          "quiet": true,
          "tags": ["iam-service:latest"]
        },
        "publish": {
          "push": true,
          "images": ["ghcr.io/ebizbase/iam-service"],
          "tags": ["type=sha"]
        }
      }
    }
  }
}
