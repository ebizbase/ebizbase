{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "strict": false,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "allowJs": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "ES2022",
    "lib": ["es2022", "dom"],
    "types": ["node"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ebizbase/angular-app": ["libs/angular/app/src/index.ts"],
      "@ebizbase/angular-common": ["libs/angular/common/src/index.ts"],
      "@ebizbase/angular-form": ["libs/angular/form/src/index.ts"],
      "@ebizbase/common-types": ["libs/common/common-types/src/index.ts"],
      "@ebizbase/iam-interfaces": ["libs/common/iam-interfaces/src/index.ts"],
      "@ebizbase/nestjs-mongodb": ["libs/nestjs/mongodb/src/index.ts"],
      "@ebizbase/nestjs-node-mailer": ["libs/nestjs/node-mailer/src/index.ts"],
      "@ebizbase/nestjs-pino-logger": ["libs/nestjs/pino-logger/src/index.ts"],
      "@ebizbase/nestjs-rabbitmq": ["libs/nestjs/rabbitmq/src/index.ts"],
      "@ebizbase/nestjs-serial": ["libs/nestjs/serial/src/index.ts"],
      "@ebizbase/nx-internal": ["tools/nx-internal/src/index.ts"],
      "@ebizbase/testing-utils": ["libs/common/testing-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
