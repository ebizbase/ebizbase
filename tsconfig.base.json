{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "strict": false,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "allowJs": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "ES2022",
    "lib": ["es2022", "dom"],
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ebizbase/angular-common-service": ["libs/angular/angular-common-service/src/index.ts"],
      "@ebizbase/angular-common-ui": ["libs/angular/angular-common-ui/src/index.ts"],
      "@ebizbase/common-types": ["libs/common/common-types/src/index.ts"],
      "@ebizbase/iam-interfaces": ["libs/common/iam-interfaces/src/index.ts"],
      "@ebizbase/mail-interfaces": ["libs/common/mail-interfaces/src/index.ts"],
      "@ebizbase/nestjs-mongo": ["libs/nestjs/nestjs-mongo/src/index.ts"],
      "@ebizbase/nestjs-node-mailer": ["libs/nestjs/nestjs-node-mailer/src/index.ts"],
      "@ebizbase/nestjs-pino-logger": ["libs/nestjs/nestjs-pino-logger/src/index.ts"],
      "@ebizbase/nestjs-rabbit": ["libs/nestjs/nestjs-rabbit/src/index.ts"],
      "@ebizbase/nx-internal": ["tools/nx-internal/src/index.ts"],
      "@ebizbase/testing-utils": ["libs/common/testing-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
